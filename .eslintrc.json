{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "prettier/@typescript-eslint"],
	"rules": {
		"@typescript-eslint/class-name-casing": "warn",
		"@typescript-eslint/semi": "warn",
		"indent": ["error", "tab"],
		"max-len": ["warn", 120, 0],
		"curly": "warn",
		"eqeqeq": "warn",
		"no-throw-literal": "warn",
		"semi": "off"
	}
}
